@require "app/styles/charte"

#chat-form
	border: 1px solid $bgBtn

	&-submit
		width: 15%
		text-transform: uppercase
		font-size: 1em
		background: linear-gradient(to right, $bgPinkPastel, $bgBtn)
		border: 1px solid grey
		padding: .7em 0 0.6em 0
		color: $bgPink

	&-input
		width: 85%
		background: linear-gradient(to right, $bgPinkPastel, $bgBtn)
		border: 0
		font-size: 1.2em
		padding: .5em 1em
		color: $bgGray
		&::placeholder
			color: $color
