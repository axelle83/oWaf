@require "app/styles/charte"

#chat-form
	// border: 1px solid $bgBtn

	&-submit
		width: 15%
		text-transform: uppercase
		font-size: 1em
		font-weight: 700
		background: #046380
		border: 1px solid #046380
		border-radius: .5em
		padding: .7em 0 0.6em 0
		color: $color

	&-edit
		font-size: 2em
		color: #046380
		margin-right: 1em
	&-input
		width: 83%
		background: $color
		border: 1px solid #046380
		border-radius: .5em
		font-size: 1.2em
		margin-right: .5em
		padding: .5em 1em
		color: #046380
		&::placeholder
			color: #046380
