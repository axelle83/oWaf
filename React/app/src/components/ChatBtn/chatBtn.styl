@require "app/styles/charte"

#chatBtn
	position: fixed
	right: 0
	top: 24%
	cursor: pointer
	font-size: 2.5em
	color:  $color
	margin: .3em
	&-info
		position: absolute
		margin-top: -50px
		margin-left: -200px
		padding: 15px
		transform: scale(0) rotate(12deg)
		opacity: 0
		border-radius: 10px
		font-size: .5em
		background-color: $bgGray

.chat
	display: none
.chatVisible
	display: block

#chatBtn:hover span
	transform: scale(1) rotate(0)
	transition: all .25s
	opacity: 1
