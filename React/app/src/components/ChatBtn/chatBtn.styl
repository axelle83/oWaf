@require "app/styles/charte"

#chatBtn
	position: fixed
	right: 0
	top: 1
	cursor: pointer
	font-size: 2.5em
	color:  $bgBtn
	margin: .3em

.chat
	display: none
.chatVisible
	display: block

@media screen and (min-width: 500px)
	#chatBtn
		top: 67%

@media screen and (min-width: 1200px)
	#chatBtn
		top: 75%
