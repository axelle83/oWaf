@require "app/styles/charte"


#homeVisiteur
  background: linear-gradient($bgPeche, $bgPink, $bgOrange)
  display: block
  font-family: $text
  padding-top: 5em


.visiteur-img
  background-image: url('/images/andrew-pons-web.jpg')
  background-position: center
  background-repeat: no-repeat
  background-size: cover
  border: 3px solid #dcdcdc
  margin: auto
  width: 90%

.visiteur-text-img
  animation: flash 5s infinite
  color: $color
  font-family: $title
  font-size: 2em
  padding: 1em
  text-align: center

@keyframes flash
  from,
  50%,

  to
    opacity: 1
  25%,
  75%
    opacity:.2

.visiteur-carte

  color: $color
  display: flex
  padding-bottom: 1em
  padding-top: 1em
  width: 100%

.visiteur-carte-img
  background-image: url('/images/google-maps-par-defaut.jpg')
  background-position: top
  background-repeat: no-repeat
  background-size: contain
  height: 15em
  margin-left: 3em
  margin-top: 1em
  width: 40%



.visiteur-carte-text
  font-family: $text
  font-size: 2em
  padding-left: 2.5em
  padding-top: 1.5em
  text-align: center
  width: 50%
  line-height: 1.2em

.visiteur-img2

  color: $color
  display: flex
  width: 100%

.visiteur-img2-text
  font-family: $text
  font-size: 2em
  margin-left: 3.5em
  padding-bottom: 2em
  padding-left: 1em
  padding-top: 1em
  text-align: center
  width: 40%
  line-height: 1.2em



.visiteur-img2-img
  background-image: url(/images/tim-mossholder-web.jpg);
  background-position: top
  background-repeat: no-repeat
  background-size: contain
  height: 20em
  margin-left: 2em
  margin-top: 1em
  width: 50%


.home-blog-title
    font-size: 3em
    text-decoration: underline
    padding-bottom: 1em


@media screen and (min-width: 500px)
  .visiteur-img
    height: 40em
    margin-top: 6.1em

  .visiteur-text-img
    font-size: 2em

  .visiteur-carte-img
    height: 15em


  .visiteur-carte-text
    font-size: 2em

  .visiteur-img2-text
    font-size: 2em
    margin-bottom: 0
    margin-left: 1em
    padding-bottom: 0
    padding-left: 0


  .visiteur-img2-img
    height: 20em
    margin-left: 2em
    margin-top:0
    padding-top: 0

@media screen and (min-width: 1200px)
  #homeVisiteur
    padding-top: 10em

  .visiteur-img
    height: 60em
    margin: auto
    width: 80%

  .visiteur-text-img
    font-size: 3em

  .visiteur-carte-img
    height: 28em
    margin-left: 12em

  .visiteur-carte-text
    font-size: 3em
    margin-right:7em


  .visiteur-img2-text
    font-size: 2.8em
    margin-left: 4em




  .visiteur-img2-img
    height: 30em
    margin-right: 7em
    margin-top: 0
    padding-top: 0
