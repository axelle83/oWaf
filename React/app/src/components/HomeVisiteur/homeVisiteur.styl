@require "app/styles/charte"


#homeVisiteur
  display: block
  padding-top: 5em
  background: linear-gradient($bgPeche, $bgPink, $bgOrange)
  scroll-behavior: smooth

.visiteur-img
  background-image: url('/images/Copie de andrew-pons-9713-unsplash.jpg')
  background-size: cover
  background-repeat: no-repeat
  background-position: center
  border: 1px solid $color
  margin: auto
  width: 90%

.visiteur-text-img
  font-family: $title
  font-size: 2em
  color: $color
  text-align: center
  padding : 1em
  animation: flash 5s infinite
@keyframes flash
  from,
  50%,
  to
    opacity: 1;
  25%,
  75%
    opacity: 0.2;

.visiteur-carte
  // background-color: $bgPink
  color: $color
  padding-top: 1em
  padding-bottom: 1em
  width: 100%
  display: flex

.visiteur-carte-img
  height: 15em
  width: 40%
  margin-left: 1em
  margin-top: 1em
  background-image: url('/images/google-maps-par-defaut.jpg')
  background-size: contain
  background-repeat: no-repeat
  background-position: top

.visiteur-carte-text
  font-size: 2em
  width: 40%
  font-family: $text
  text-align: center
  padding-left: 2.5em
  padding-top: 1.5em

.visiteur-img2
  // background-color: $bgOrange
  color: $color
  width: 100%
  display: flex

.visiteur-img2-text
  font-size: 2em
  width: 40%
  font-family: $text
  text-align: center
  padding-left: 1em
  padding-top: 1em
  padding-bottom: 2em
  margin-left: 1.5em



.visiteur-img2-img
  background-image: url(/images/tim-mossholder-599480-unsplash.jpg);
  background-size: contain
  background-repeat: no-repeat
  background-position: top
  height: 20em
  width: 50%
  margin-left: 2em
  margin-top: 1em
  transition-property: transform
  transition-duration: 1s
  transition-timing-function: ease-in



.visiteur-articles
  // background-color: $bgPinkLigth
  height: 8em
  font-size: 2em
  color: $color
  padding-top: 0.5em
  padding-left: 1em
  height: 20em


@media screen and (min-width: 500px)
  .visiteur-img
    height: 40em
    margin-top: 6.1em

  .visiteur-text-img
    font-size: 2em

  .visiteur-carte-img
    height: 15em


  .visiteur-carte-text
    font-size: 2em

  .visiteur-img2-text
    font-size: 2em
    padding-bottom: 0
    margin-bottom: 0
    margin-left: 1em
    padding-left: 0


  .visiteur-img2-img
    height: 20em
    margin-left: 2em
    padding-top: 0
    margin-top:0

@media screen and (min-width: 1200px)
  #homeVisiteur
    padding-top: 10em

  .visiteur-img
    height: 60em
    margin: auto
    width: 80%

  .visiteur-text-img
    font-size: 3em

  .visiteur-carte-img
    height: 28em
    margin-left: 12em

  .visiteur-carte-text
    font-size: 3em
    margin-right:7em


  .visiteur-img2-text
    font-size: 2.8em
    margin-left: 4em




  .visiteur-img2-img
    height: 30em
    margin-right: 7em
    padding-top: 0
    margin-top: 0
