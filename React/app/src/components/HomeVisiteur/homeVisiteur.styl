@require "app/styles/charte"


#homeVisiteur
  background: #3A677F
  display: block
  font-family: $text
  padding-top: 5em


.visiteur-img
  background-image: url('/images/andrew-pons-web.jpg')
  background-position: 100% 30%
  background-repeat: no-repeat
  background-size: cover
  margin: auto
  position: relative
  width: 100%


.visiteur-text-img
  color: $color
  font-family: $title
  line-height:1.2em
  padding-top: 10em
  position: absolue
  text-align: center
  text-shadow: 2px 0 0 black, 0 2px 0 black, 0 -2px 0 black, -2px 0 0 black, 2px 2px 0 black, 2px -2px 0 black, -2px 2px 0 black, -2px -2px 0 black


.visiteur-carte
  display: flex
  height:15em
  margin: auto
  margin-bottom: 1em;
  width:100%


.visiteur-carte-text
  color:$color
  font-family: $text
  font-size: 2em
  font-weight: bolder
  padding: 1em
  text-align: center
  width: 100%
  line-height: 1.4em



.visiteur-img2
  display: flex
  height: 30em
  padding-top: 5em
  width: 100%

.visiteur-img2-text
  background-color:$color
  font-family: $text
  padding-top:3em
  text-align: center
  width: 100%
  line-height: 1.2em

.visiteur-img2-text-upper
  color:black
  font-size:0.9em
  padding-top: 5em
  text-transform:uppercase

.visiteur-img2-img
  background-image: url(/images/tim-mossholder-web.jpg);
  background-position: top
  background-repeat: no-repeat
  background-size: cover
  height: 20em
  width: 60%


.visiteur-articles
  color: $color
  font-size: 3em
  height: 8em
  padding-left: 1em
  padding-top: .5em


@media screen and (min-width: 500px)
  .visiteur-img
    height: 20em
    margin-top: 3em
    margin-right: 4em

  .visiteur-text-img
    font-size: 1.7em


  .visiteur-carte-text
    font-size: 1.5em

  .visiteur-img2-text
    font-size: 1.5em


  .visiteur-img2-img
    height: 100%

@media screen and (min-width: 1200px)
  #homeVisiteur
    padding-top: 10em

  .visiteur-img
    height: 30em
    margin: auto

  .visiteur-text-img
    font-size: 2.5em

  .visiteur-carte-text
    font-size: 2.5em

  .visiteur-img2-text
    font-size: 1.8em
