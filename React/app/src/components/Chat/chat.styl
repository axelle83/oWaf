#chat
	position: absolute
	top: 0
	left: 0
	justify-content: space-between
	border: 1px solid red
	background: white
	overflow: hidden
	color: #222
	width: 90vw
	height: 50vh
	margin: 20vh 5vw
	&.chat
		display: none
	&.chat--open
		display: flex
	&-display
		margin-left: 2em
		width: 95%
@media (min-width: 1024px)
	#chat
		width: 50vw
		margin: 20vh 25vw
