@require "app/styles/charte"

#chat
	position: fixed
	bottom: 30em
	right: 0
	border: 3px solid $bgBlueDuck
	border-radius: 12px
	background: #f5f5f5
	margin: 10em 4em 10em 2em
	overflow: hidden
	color: #222
	height: auto
	width: 90%
	padding: 1em

	&.chat
		display: none
		padding-left: 1.5em
		padding-top: 1.5em
	&.chat--open
		display: flex

	&-display
		margin-left: 1em
		margin-right: 1em
		width: 95%

#chatClose
#chatEdit
	font-size: 3em
	color: $bgBlueDuck
#chatEdit
	position: absolute
	bottom: .3em

@media (min-width: 768px)
	#chat
		bottom: 0
@media (min-width: 1024px)
	#chat
		bottom: -5em
		width: 70%
	#chatClose
	#chatEdit
		font-size: 2em
	#chatEdit
		bottom: .6em

@media (min-width: 1200px)
	#chat
		width: 50%
