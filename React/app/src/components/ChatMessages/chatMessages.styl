@require "app/styles/charte"
#messages
	height: 25em
	overflow-y: auto

	.message
		padding: .5rem 1rem
		border-radius: 0.5em
		margin-bottom: 0.2em
		&-content
			font-size: 1em
			padding: .1em

		&-user
			font-style: bold
			font-size: 1rem

		&-date
			font-size: .5rem
			font-style: italic
		&--own
			background: linear-gradient( 10deg, $bgBtn,$bgPinkPastel)
