@require "app/styles/charte"

#login
	position: fixed
	top: 0
	right: 0
	border: 3px solid $bgBlueDuck
	border-radius: 10px
	margin: 10em auto
	background-color: #BBBCBD
	overflow: hidden
	color: #222
	height: auto
	width: 90vw
	font-size: 1.5em
	&.login
		display: none
	&.login--open
		display: block

#loginClose
	font-size: 2em
	margin-left: .2em
	color: $bgBlueDuck

@media (min-width: 1024px)
	#login
		max-width: 360px
		width: 50vw
		margin: 20vh 25vw
		font-size: 1em
