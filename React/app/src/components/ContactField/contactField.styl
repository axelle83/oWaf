@require "app/styles/charte"

.contact
	position: relative

	&-input
		display: block
		border: 1px solid #ccc
		color: #ccc
		font-size: 1.2em
		height: 2.75em
		width: 100%
		margin: .4em 0
		padding: 0 1em
		&::placeholder
			color: #ccc

	&-textarea
		height: 5em
	&-label
		display: none
		color: $bgWhite
		position: absolute
		top: .75em
		left: 1.5em
		font-family: 'Source Sans Pro'
		text-transform: uppercase
		font-size: .8em

	&--has-error &
		&-input
			border-color: red
		&-label
			color: red
