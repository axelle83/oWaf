@require "app/styles/charte"

#homeMembre
  background: linear-gradient($bgPeche, $bgPink, $bgOrange)
  display: block
  font-family: $text
  height: auto
  padding-top: 9em


.homeMembre-img
  background-image: url('/images/marcus-wallis-web.jpg')
  background-position: center
  background-repeat: no-repeat
  background-size: cover
  border: 3px solid #dcdcdc
  height: 30em
  margin: auto
  width: 85%

.homeMembre-text
  animation: flash 5s infinite
  color: $color
  font-family: $title
  font-size: 3em
  padding: 1em
  text-align: center

.homeMembre-carte
  color: $color
  padding-bottom: 1em
  padding-top: 1em
  width: 100%

.homeMembre-carte-title
  color: $color
  font-family: $title
  font-size: 2em
  margin-bottom: .5em
  text-align: center



.homeMembre-carte-img
  background-image: url('/images/google-maps-par-defaut.jpg')
  background-position: top
  background-repeat: no-repeat
  background-size: contain
  height: 30em
  margin: auto
  width: 80%

.homeMembre-carte-texte
  color: $color
  font-family: $text
  font-size: 2em
  margin: 1em
  text-align: center

.homeMembre-blog
  color: $color
  font-family: $title
  font-size: 2em
  padding-left: 1em
  padding-top: .5em

.home-blog
  border: 2px solid $color
  color: $color
  height: 20em
  margin: 1em 1em 0 1em

.home-blog-post
  display: flex

.post
  padding: 1em
  &-more
    text-align: right
    padding: 1em 0
  &-title
    font-size:1.5em
    padding: .5em 0
  &-category
    text-transform: uppercase
    font-size: 2em
    padding-top: .5em

@media screen and (min-width: 1200px)
  #homeMembre
    padding-top: 10em

  .homeMembre-img
    height: 50em

  .homeMembre-carte-title
    font-size: 2em
    margin-left: 2em
    text-align: left

  .homeMembre-carte
    align-content: stretch
    align-items: flex-start
    display: flex
    flex-direction: row
    flex-wrap: nowrap
    justify-content: flex-start


  .homeMembre-carte-img
    align-self: center
    flex: 0 1 auto
    margin-left: 0
    margin-top: 1em
    order: 0
    width: 60%

  .homeMembre-carte-texte
    align-self: center
    flex: 0 1 auto
    font-size: 2.5em
    margin: 0
    margin-left: 0
    margin-right: 5em
    order: 0
    padding-left: 0
    width: 30%

  .homeMembre-blog
    font-size: 2em
    margin-left: 1em
    text-align: left
  .homeMembre-blog-article
    height: 25em
    margin: 2em 2em 0 2em
