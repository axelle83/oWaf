@require "app/styles/charte"

#subscribe
  background-color: $bgSalmon
  color: $color
  padding: 8em 20em 1em

  &-title
    font-family: 'Pacifico'
    text-align: right
    font-size: 2em
    padding-bottom: .3em

#subscribe-submit
	border: none
	background-color: $bgPeche
	border-radius: 10px
	font-size: 1em
	margin: auto
	display: block
	text-align: center
	text-transform: uppercase
	width: 10em
	height: 3em

#subscribe-me
.subscribe-dog
  border: 1px solid $color
  border-radius: 10px
  margin-bottom: 2em

.subscribe-dog-title
  font-family: 'Pacifico'
  text-align: right
  font-size: 1.2em
  padding: 0.2em 0.2em 0

.password
  display: none
  padding: 0 0 0.5em 0.5em
  font-size: 1.5em
  font-family: 'Pacifico'
.error-password
  display: block
  color: $color
