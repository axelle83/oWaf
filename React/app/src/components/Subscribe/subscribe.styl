@require "app/styles/charte"

#subscribe
  background-color: $bgSalmon
  color: $color
  padding: 15em 10em 5em
  height: 95vh

  &-title
    font-family: $title
    color: $color
    text-align: right
    font-size: 2em
    padding-bottom: .3em


#subscribe-submit
    background-color: $bgPeche
    border: none
    border-radius: 1em
    color: $color
    display: block
    font-size: 1.5em
    height: 3em
    padding: 0.5em
    text-align: center
    text-transform: uppercase
    margin: auto
    width: 10em


#subscribe-me
.subscribe-dog
  border: 1px solid $color
  border-radius: 10px
  margin-bottom: 2em

.subscribe-dog-title
  font-family: 'Pacifico'
  text-align: right
  font-size: 1.2em
  padding: 0.2em 0.2em 0

.password
  display: none
  padding: 0 0 0.5em 0.5em
  font-size: 1.5em
  font-family: 'Pacifico'
.error-password
  display: block
  color: $color
