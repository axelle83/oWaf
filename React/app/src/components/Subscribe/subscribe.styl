@require "app/styles/charte"

.subscribe-form
  background-color: #9BBBCB
  color: $color
  padding: 8em 2em 4em
  text-align: center
  height: auto

.subscribe-title
  font-family: $title
  color: $color
  font-size: 2em
  padding-bottom: 1em
  padding-top: 1em

.subscribe-me
.subscribe-dog
  border: 1px solid $color
  border-radius: 10px
  margin-bottom: 1em
  height: auto

.subscribe-dog-title
.subscribe-me-title
  font-family: $title
  font-size: 1.5em
  margin: .5em 0
  color: $color
  text-align: left
  padding-left: 1em

.mandatory
  color : $bgBlueSky
  padding-right: 1em
  text-align: right
  font-size: 1.5em

.password
.exist
  display: none
  padding: 0 0 0.5em 0.5em
  font-size: 1.5em
  font-family: $title
.error-password
.exist-true
  display: block
  color: $color
  padding-top: .5em

#subscribe-submit
  background-color: $bgBlueSky
  border: none
  border-radius: 1em
  color: $color
  display: block
  font-size: 1.5em
  height: 2em
  padding: 0.5em
  text-align: center
  text-transform: uppercase
  margin: auto
  width: 10em

@media screen and (min-width: 768px)
  .subscribe-me
  .subscribe-dog
    height: auto
    padding-bottom: 1em
  .mandatory
    padding-bottom: 1em

@media screen and (min-width: 1200px)
  .subscribe-form
    height: auto
    padding: 8em 10em 1em
  .subscribe-dog-title
  .subscribe-me-title
    font-size: 1.5em
    margin-top: .5em
    padding-left: 1em
  .mandatory
    font-size: 1.2em
