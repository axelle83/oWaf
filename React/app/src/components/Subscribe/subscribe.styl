@require "app/styles/charte"

#subscribe
  background-color: #9BBBCB
  color: $color
  padding: 8em 20em 4em
  text-align: center
  height: 94.9vh

  &-title
    font-family: $title
    color: $color
    font-size: 2em
    padding-bottom: .8em
    padding-top: .3em


#subscribe-submit
  background-color: $bgBlueSky
  border: none
  border-radius: 1em
  color: $color
  display: block
  font-size: 1.5em
  height: 2em
  padding: 0.5em
  text-align: center
  text-transform: uppercase
  margin: auto
  width: 10em

.password
.exist
  display: none
  padding: 0 0 0.5em 0.5em
  font-size: 1.5em
  font-family: $title
.error-password
.exist-true
  display: block
  color: $color
