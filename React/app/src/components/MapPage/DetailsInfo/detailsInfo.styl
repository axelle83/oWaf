@require "app/styles/charte"

#detailsInfo
  display: block
  flex-direction: column
  margin: auto
  width: 50%

.detailsInfo-data
  border-radius: .5em
  font-size: 1.5em
  padding: .5em
  width: 100%
  background-color: $color
  color: $bgGray

.detailsInfo-label
  color: $bgGray
  font-size: 1.2em
  padding: 0.5em 0 0.5em 0.5em
  width: 100%

.check
  color: $bgGray
  font-size: 1.2em
  padding: 0.5em 0 0.5em 0.5em

input[type=checkbox]
    -webkit-appearance: none
    -moz-appearance: none
    -ms-appearance: none

input[type=checkbox]
    background: #fff
    border-radius: 4px
    border: 1px solid #ccc
    height: 18px
    width: 18px

input[type="checkbox"]:checked
  background: green
  margin:0
  position: relative
  &:before
    display: block
    position: absolute
