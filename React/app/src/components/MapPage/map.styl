@require "app/styles/charte"

#map
    background-color: $bgSalmon
    height: auto
    display: block
    flex-direction: column
    padding-top: 15em

.map-title
    font-family: $title
    font-size: 3em
    text-align: center
    color: $color
    padding-top: 0.5em
    padding-bottom: 1em

.map-image
    width: 80%
    margin: 2em auto


.map-addPlace
    margin-left: 3em
    margin-bottom: 2em
    border: none
    border-radius: 2em
    height: 2em
    width: 15em
    font-size: 1.8em
    padding-left: 1em

.map-addPlace::placeholder
  padding-left: 1em
  color: #ccc

.map-icon
  background-color: $bgGrayLigth
  width: 25%
  margin: 2em auto
  padding: 2em
  border-radius: 1.5em

.map-table
  color: $color
  font-size: 1.5em
  padding-right:1em

.map-table img
  margin-right: 0.5em
