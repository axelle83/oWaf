@require "app/styles/charte"

#details
    display: block
    flex-direction: column
    width: 25em
    margin: auto

#place-submit
    background-color: $bgPeche
    border: none
    border-radius: 1em
    color: $color
    display: block
    font-size: 1.5em
    height: 2.5em
    padding: 0.5em
    text-align: center
    text-transform: uppercase
    margin: auto
    width: 10em

#newPlaceSend
	&.newPlace
		display: none
	&.newPlace--true
		font-family: 'Pacifico'
		font-size: 1.5em
		padding: .5em
		display: block
		color: $bgGray
