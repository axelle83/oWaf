@require "app/styles/charte"

#cgu
  background-color: $bgSalmon
  display: flex
  font-family: $text
  justify-content: center
  height: 75em

.cgu
  background-color: $color
  border-radius: 1em
  padding: 0 1em
  width: 75%
  &-title
    font-size: 1.7em
    font-family: $title
    margin-bottom: 1em
    margin-top: 1em
    text-align: center
  &-subtitle
    font-size: 1.3em
    line-height: 1.5em
  &-text
    font-size: 1em
    line-height: 1.5em
    margin: 1.8em

ul li
  margin-left: 1em
  &::before
    content: '- '

@media screen and (min-width: 1200px)

  #cgu
    height: auto
    padding-top: 1.3em
  .cgu
    // width: 50%
    margin-bottom: 4em
    margin-top: 8em
    &-title
      font-size: 2em
    &-text
      // font-size: 1.4em
      margin: 0.2em 1em
