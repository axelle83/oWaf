@require "app/styles/charte"

#cgu
  display: flex
  justify-content: center
  height: 90em
  font-family: $text
  animation: pulse 5s infinite
@keyframes pulse
  0%
    background-color: $bgPink
  50%
    background-color: $bgPeche

  100%
    background-color: $bgSalmon



.cgu
  background-color: $color
  width: 75%
  margin-top: 15em
  margin-bottom: 7em

  &-title
    font-size: 1.7em
    text-align: center
    margin-bottom: 2em
    margin-top: 2em

  &-text
    font-size: 1.6em
    text-align: justify
    margin: 1.8em


// @media screen and (min-width: 500px)




@media screen and (min-width: 1200px)

  #cgu
    height: auto
  .cgu
    width: 50%
    margin-top: 8em
    margin-bottom: 4em
    &-title
      font-size: 2em
      &-text
        font-size: 1.4em
        margin: 1em
