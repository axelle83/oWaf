@require "app/styles/charte"

#cgu
  background-color: #74CFFF
  display: flex
  font-family: $text
  justify-content: center
  height: auto
  padding-top: 15em
  padding-bottom: 5em
  font-size: .6em

.cgu
  background-color: $color
  border-radius: 1em
  padding: 1em
  width: 95%
  &-title
    font-size: 1.7em
    font-family: $title
    margin-bottom: 1em
    margin-top: 1em
    text-align: center
  &-subtitle
    font-size: 1.3em
    line-height: 1.5em
  &-text
    font-size: 1em
    line-height: 1.5em
    margin: 1.8em

#cgu ul li
  margin-left: 1em
  &::before
    content: '- '

@media screen and (min-width: 1200px)
  #cgu
    padding-top: 1.3em
  .cgu
    width: 75%
    margin-bottom: 4em
    margin-top: 8em
    &-title
      font-size: 2em
    &-text
      margin: 0.2em 1em
