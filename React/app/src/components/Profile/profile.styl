@require "app/styles/charte"

.profile
  display: none
.profile--modified
  display: block
  background-color: $bgBlueSky
  border: none
  border-radius: 1em
  color: $color
  font-size: 1.5em
  padding: 0.5em
  text-align: center
  margin: auto
  text-transform: uppercase
.profile--confirm
.profil--deleted
  display: block
  font-family: $title
  color: $bgBlueSky
  text-align: center
  font-size: 1.5em
  padding-bottom: .5em

#profileButtons button
  margin-top: 1em
  font-size: 2em

@media screen and (min-width: 768px)
  #profile
    padding: 8em 2em 1em
    &-title
      font-size: 1.5em
      padding-bottom: .8em
@media screen and (min-width: 1024px)
  #profileButtons
    display: flex
  #profileButtons button
    margin-top: 0
    font-size: 1.5em
