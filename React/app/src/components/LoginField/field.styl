@require "app/styles/charte"

/*
 * Classes
 */
.field
	position: relative

	/*
	 * Children
	 */
	&-input
		display: block
		border: 1px solid #ccc
		color: #ccc
		font-size: 1.2em
		height: 2.75em
		width: 100%
		margin: .4em 0
		padding: 0 1em

		&::placeholder
			color: #ccc

	&-label
		display: none
		color: #f1f1f1
		position: absolute
		top: .75em
		left: 1.5em
		font-family: 'Source Sans Pro'
		text-transform: uppercase
		font-size: .8em


	/*
	 * Modifiers
	 */
	&--has-value &
		&-input
			padding-top: 1em

		&-label
			display: block
			animation: fadeInTop .2s

	&--has-error &
		&-input
			border-color: $color-error
		&-label
			color: $color-error

	&--has-focus &
		&-input
			border-color: $color-input-border--focus

		&-label
			color: $color-input-label--focus

@keyframes fadeInTop
	0%
		transform: translateY(1em)
		opacity: 0
