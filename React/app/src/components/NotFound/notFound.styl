@require "app/styles/charte"

#notFound
  background-image: url(/images/matthew-henry-web.jpg)
  background-position: top
  background-repeat: no-repeat
  background-size: cover
  height: 80em

.title
  color: $color
  font-family: $title
  font-size: 3em
  margin-left: .3em
  margin-top: 4em
  position: absolute

@media screen and (min-width: 500px)
  #notFound
    height: 69em

  .title
    font-size: 3em
    margin-left: 1em
    margin-top: 4em
    position: absolute

@media screen and (min-width: 1200px)
  #notFound
    height: 58.7em
  .title
    font-size: 5em
    margin-left: 2em
    margin-top: 4em
    position: absolute
